<section>
    <article>
        <h1>Products</h1>
    </article>
    {{#each products}}
    <a href="/products/{{this.id}}">
        <article>
            {{#if this.title}}
            <h2>{{this.title}}</h2>
            {{else}}
            <h2>No title</h2>
            {{/if}}
            <p>{{this.price}}</p>
        </article>
    </a>
    {{/each}}
</section>